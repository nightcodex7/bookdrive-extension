{
  "manifest_version": 3,
  "name": "BookDrive",
  "short_name": "BookDrive",
  "version": "0.1.0",
  "description": "BookDrive: Two-way bookmark sync using Google Drive. Privacy-respecting, open-source, and cross-platform.",
  "author": "Tuhin Garai",
  "homepage_url": "https://github.com/nightcodex7/bookdrive-extension",
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon16.png",
    "48": "assets/icon48.png",
    "64": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "permissions": [
    "bookmarks",
    "identity",
    "storage",
    "alarms",
    "windows",
    "tabs"
  ],
  "host_permissions": [
    "https://www.googleapis.com/*",
    "https://accounts.google.com/*",
    "https://oauth2.googleapis.com/*"
  ],
  "oauth2": {
    "client_id": "YOUR_OAUTH2_CLIENT_ID.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.profile",
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/drive.file"
    ]
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "BookDrive"
  },
  "options_page": "options/options.html",
  "offline_enabled": true,
  "minimum_chrome_version": "100",
  "web_accessible_resources": [
    {
      "resources": ["assets/icon16.png", "assets/icon48.png", "assets/icon128.png", "backup-history/backup-history.html", "analytics/analytics.html", "conflict-resolution/conflict-resolution.html", "shared-folders/shared-folders.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
} 