{
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2021", "dom"],
    "checkJs": false,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "types": ["chrome"],
    "baseUrl": ".",
    "paths": {
      "chart.js": ["node_modules/chart.js/dist/chart.js"],
      "chart.js/auto": ["node_modules/chart.js/auto"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "eslint.config.mjs", "scripts", "docs", "*.md"]
}
