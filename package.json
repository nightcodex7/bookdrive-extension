{
  "name": "bookdrive-extension",
  "version": "1.0.0",
  "description": "Privacy-first bookmark synchronization using your own Google Drive. Cross-platform, secure, and feature-rich.",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "directories": {
    "doc": "docs",
    "test": "__tests__"
  },
  "scripts": {
    "clean": "rimraf dist",
    "lint": "eslint src/ --ext .ts,.js --fix",
    "lint:check": "eslint src/ --ext .ts,.js",
    "format": "prettier --write \"src/**/*.{ts,js,css,html}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,css,html}\"",
    "typecheck": "tsc --noEmit",
    "build:js": "node esbuild.config.js",
    "build:assets": "mkdir -p dist && cp -r src/assets src/popup/*.html src/popup/*.css src/options/*.html src/options/*.css dist/",
    "build:manifest": "cp src/manifest.json dist/",
    "build": "npm run clean && npm run typecheck && npm run build:js && npm run build:assets && npm run build:manifest",
    "build:prod": "NODE_ENV=production npm run build",
    "watch": "node esbuild.config.js --watch",
    "dev": "npm run watch",
    "package": "npm run build:prod && cd dist && zip -r ../bookdrive-extension-v$(node -p \"require('../package.json').version\").zip *",
    "package:dev": "npm run build && cd dist && zip -r ../bookdrive-extension-dev.zip *",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "validate": "npm run lint:check && npm run format:check && npm run typecheck && npm run test",
    "setup:oauth2": "node scripts/setup_oauth2.js",
    "docs:serve": "cd docs && python -m http.server 8080",
    "release": "npm run validate && npm run build:prod && npm run package",
    "precommit": "npm run lint && npm run format && npm run typecheck",
    "prepare": "husky install || true"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/bookdrive-extension.git"
  },
  "keywords": [
    "bookmarks",
    "sync",
    "chrome-extension",
    "google-drive",
    "privacy",
    "cross-platform",
    "encryption",
    "collaboration"
  ],
  "author": "BookDrive Project <contact@bookdrive.dev>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/your-org/bookdrive-extension/issues"
  },
  "homepage": "https://github.com/your-org/bookdrive-extension#readme",
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/chrome": "^0.1.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.14",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "ansi-colors": "^4.1.3",
    "chart.js": "^4.4.0",
    "esbuild": "^0.20.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jsdoc": "^51.3.4",
    "eslint-plugin-prettier": "^5.5.1",
    "globals": "^16.3.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.5",
    "semver": "^7.7.2",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {},
  "browserslist": [
    "Chrome >= 100",
    "Edge >= 100",
    "last 2 versions"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "collectCoverageFrom": [
      "src/**/*.{ts,js}",
      "!src/**/*.d.ts",
      "!src/**/*.test.{ts,js}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 100,
    "tabWidth": 2,
    "arrowParens": "always"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-console": "warn",
      "import/extensions": "off",
      "import/no-unresolved": "off"
    }
  }
}