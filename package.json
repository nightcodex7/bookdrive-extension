{
  "name": "bookdrive-extension",
  "version": "1.0.0",
  "description": "BookDrive: Two-way bookmark sync using Google Drive. Privacy-respecting, open-source, and cross-platform.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "clean": "rimraf dist",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.{ts,js}\"",
    "build:js": "node esbuild.config.js",
    "build:assets": "mkdir -p dist && cp -r src/assets src/popup/*.html src/popup/*.css src/options/*.html dist/",
    "build:manifest": "cp src/manifest.json dist/",
    "build": "npm run clean && npm run build:js && npm run build:assets && npm run build:manifest",
    "build:prod": "NODE_ENV=production npm run build",
    "watch": "node esbuild.config.js --watch",
    "package": "npm run build:prod && cd dist && zip -r ../bookdrive-extension.zip *",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "validate": "npm run lint && npm run test && npm run typecheck"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nightcodex7/bookdrive-extension.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nightcodex7/bookdrive-extension/issues"
  },
  "homepage": "https://github.com/nightcodex7/bookdrive-extension#readme",
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/chart.js": "^4.0.1",
    "@types/chrome": "^0.1.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.14",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "ansi-colors": "^4.1.3",
    "chart.js": "^4.5.0",
    "esbuild": "^0.20.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jsdoc": "^51.3.4",
    "eslint-plugin-prettier": "^5.5.1",
    "globals": "^16.3.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.5",
    "semver": "^7.7.2",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "crypto-js": "^4.2.0"
  }
}
